@model List<TestMessages.Models.Mess.Message>
@{
    ViewBag.Title = "All Messages";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">
            @Html.ActionLink("User ID", "ShowMessages", new { sortOrder = ViewBag.IdSortParam})
            </th>
            <th scope="col">Message</th>
            <th scope="col">
            @Html.ActionLink("Time", "ShowMessages", new { sortOrder = ViewBag.TimeSortParam })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.UserId</th>
                <td>@item.MessageBody</td>
                <td>@item.TimeStamp</td>
            </tr>
        }
    </tbody>
</table>